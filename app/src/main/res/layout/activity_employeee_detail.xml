<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeDetailActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />


    <ScrollView
        android:layout_above="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_layout_lead_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/label_reg_applicant_name" />


                <TextView
                    android:id="@+id/tv_employee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    android:id="@+id/tv_label_father_name"
                    style="@style/TVDetailLabel"
                    android:text="@string/label_reg_applicant_father_name" />

                <TextView
                    android:id="@+id/tv_employee_father"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_lead_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    android:id="@+id/tv_label_lead_name"
                    style="@style/TVDetailLabel"
                    android:text="@string/label_reg_applicant_mother_name" />

                <TextView
                    android:id="@+id/tv_employee_mother_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingRight="@dimen/employee_detail_text_padding"
                    android:text="@string/label_reg_dob"
                    android:textSize="@dimen/employee_detail_text_size" />

                <TextView
                    android:id="@+id/tv_lead_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/designation" />

                <TextView
                    android:id="@+id/tv_employee_designation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/department" />

                <TextView
                    android:id="@+id/tv_employee_department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/grade_pay" />

                <TextView
                    android:id="@+id/tv_employee_grade_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_fax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/blood_group" />

                <TextView
                    android:id="@+id/tv_employee_blood_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/employment_type" />

                <TextView
                    android:id="@+id/tv_employee_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/label_reg_dob" />

                <TextView
                    android:id="@+id/tv_employee_dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/date_of_joining" />

                <TextView
                    android:id="@+id/tv_employee_doj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_lead_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/body_identification_marks" />

                <TextView
                    android:id="@+id/tv_employee_body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_lead_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/contact_no" />

                <TextView
                    android:id="@+id/tv_employee_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/emergency_contact" />

                <TextView
                    android:id="@+id/tv_employee_emergency_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_revenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/landline_no" />

                <TextView
                    android:id="@+id/tv_employee_landLine_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"

                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/permanent_address" />

                <TextView
                    android:id="@+id/tv_employee_parment_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_lead_email_opt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/present_address" />

                <TextView
                    android:id="@+id/tv_employee_present_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_lead_skype_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/employee_detail_row_padding">

                <TextView
                    style="@style/TVDetailLabel"
                    android:text="@string/email_id" />

                <TextView
                    android:id="@+id/tv_employee_email_di"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/employee_detail_text_padding"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="@dimen/employee_detail_text_size" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <include
        android:id="@+id/layout_footer"
        layout="@layout/layout_footer"/>


</RelativeLayout>







